<% if flash[:notice] %>
<div class="alert-message block-message <%= flash[:notice][:class] %>">
  <p>
    <%= flash[:notice][:message] %>
  </p>
</div>
<% end %>

<p>
  <a href="/test/create" class="btn success">Create new</a>
</p>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @tests.each do |test| %>
  <tr>
    <td><%= test["_id"] %></td>
    <td><%= test["title"] %></td>
    <td>
      <a href="/test/<%= test["_id"] %>/edit" class="btn">Edit</a>
      <a href="/test/<%= test["_id"] %>/delete" class="btn danger confirm">Delete</a>
      <% if @resume %>
      <% if test["open_attempts"] > 0 %>
      <a href="/test/<%= test["_id"] %>/attempt" class="btn success">Resume Attempt</a>
      <% end %>
      <% else %>
      <a href="/test/<%= test["_id"] %>/attempt" class="btn success">Start Attempt</a>
      <% end %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>